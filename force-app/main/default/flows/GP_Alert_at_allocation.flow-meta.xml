    </variables>
    <variables>
        <name>OPURL</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <value>
            <stringValue>https://sundaycool.lightning.force.com/lightning/r/Opportunity/{!$Record.AcctSeedERP__Opportunity__r.OPP_ID18__c}/view</stringValue>
        </value>
    </variables>
