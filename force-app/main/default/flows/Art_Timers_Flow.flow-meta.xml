    <formulas>
        <name>Revision_Plus_Time</name>
        <dataType>Number</dataType>
        <expression>BLANKVALUE({!$Record.Art_Total_Est_Time__c}, 0) + BLANKVALUE({!$Record.Art_Revision_Est_Time__c}, 0)</expression>
