    <formulas>
        <name>AVG_Calculation</name>
        <dataType>Number</dataType>
        <expression>8.5 * (
  (
    5 * FLOOR((DATEVALUE({!$Record.Quote_sent_TImestamp_2__c}) - DATE(1996, 1, 1)) / 7) +
    MIN(5,
      MOD(DATEVALUE({!$Record.Quote_sent_TImestamp_2__c}) - DATE(1996, 1, 1), 7) +
      MIN(1, 24 / 8.5 * (MAX(0,
        MOD(
          {!$Record.Quote_sent_TImestamp_2__c} - DATETIMEVALUE(TEXT(DATEVALUE({!$Record.Quote_sent_TImestamp_2__c})) &amp; &quot; 12:00:00&quot;),
          1
        )
      )))
    )
  ) -
  (
    5 * FLOOR((DATEVALUE({!$Record.Opportunitiy_Created_Date_Time__c}) - DATE(1996, 1, 1)) / 7) +
    MIN(5,
      MOD(DATEVALUE({!$Record.Opportunitiy_Created_Date_Time__c}) - DATE(1996, 1, 1), 7) +
      MIN(1, 24 / 8.5 * (MAX(0,
        MOD(
          {!$Record.Opportunitiy_Created_Date_Time__c} - DATETIMEVALUE(TEXT(DATEVALUE({!$Record.Opportunitiy_Created_Date_Time__c})) &amp; &quot; 12:00:00&quot;),
          1
        )
      )))
    )
  )
)</expression>
        <scale>2</scale>
    </formulas>
