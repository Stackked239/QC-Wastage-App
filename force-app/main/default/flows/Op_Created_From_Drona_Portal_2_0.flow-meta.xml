    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>New_Op_taask</targetReference>
        </connector>
        <filterLogic>or</filterLogic>
        <filters>
            <field>Description</field>
            <operator>Contains</operator>
            <value>
                <stringValue>Get Started</stringValue>
            </value>
        </filters>
        <filters>
            <field>Description</field>
            <operator>Contains</operator>
            <value>
                <stringValue>Sticker Quote</stringValue>
            </value>
        </filters>
