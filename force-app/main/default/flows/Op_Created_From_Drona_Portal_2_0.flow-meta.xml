        <expression>IF({!$Record.Contact__r.Owner.Id} = &quot;0053g000000aMAuAAM&quot;, &quot;005VL000002HcULYA0&quot;, {!$Record.Contact__r.Owner.Id})</expression>
    </formulas>
    <formulas>
        <name>nameVariable</name>
        <dataType>String</dataType>
        <expression>IF( {!$Record.Description} = &quot;Get Started - Guest&quot;, &quot;New Customer - Op Created!!&quot;, &quot;Portal 2.0 Op Created!!&quot;)</expression>
    </formulas>
    <formulas>
        <name>Todays_Date</name>
